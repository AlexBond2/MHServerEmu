<Window x:Class="GameDatabaseBrowser.MainWindow" Loaded="Window_Loaded"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:models="clr-namespace:GameDatabaseBrowser.Models"
        Title="Game Database Browser"
        Height="720"
        Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <TreeView Name="treeView" Grid.Column="0" VirtualizingStackPanel.IsVirtualizing="True">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type models:PrototypeNode}" ItemsSource="{Binding Childs}">
                    <TextBlock Text="{Binding Name}" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Stretch" Height="20" Margin="20"/>
        <ListView Name="listView" Grid.Column="1" VirtualizingStackPanel.IsVirtualizing ="True">
            <!--<ListView.ItemTemplate>-->
            <!--<DataTemplate>-->
            <!--<TextBlock Text="{Binding Property}" />-->
            <!--<TextBlock Text="{Binding Value}" />-->
            <!--</DataTemplate>-->
            <!--</ListView.ItemTemplate>-->
        </ListView>
    </Grid>
</Window>
